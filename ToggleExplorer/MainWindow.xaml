<Window x:Class="ToggleExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToggleExplorer"
        mc:Ignorable="d"
        Title="ToggleExplorer by TheNetWyvern v2.0" Height="200" Width="400" Closed="Window_Closed" ResizeMode="CanMinimize" Topmost="True">
    <Window.Background>
        <ImageBrush ImageSource="Images/logo.png"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="2*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Name="ToggleExplorerProcess" Grid.Row="1" Content="Toggle Explorer" FontSize="16" Click="ToggleExplorerProcess_Click" Background="{x:Null}" FontFamily="Arial" Grid.IsSharedSizeScope="True" Foreground="#FF630000" BorderBrush="#00707070" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</Window>
